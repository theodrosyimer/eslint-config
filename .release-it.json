{
  "git": {
    "requireBranch": "main",
    "commitMessage": "chore(release): release v${version}"
  },
  "hooks": {
    "before:init": [
      "git pull"
    ],
    "after:bump": [
      "npx auto-changelog -p",
      "npm pkg set version ${version}"
    ]
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "preset": {
        "name": "conventionalcommits",
        "writerOpts": {
          "groupBy": "scope"
        }
      }
    }
  }
}
